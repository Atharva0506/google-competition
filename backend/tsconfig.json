{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "*",
          "src/types/*"
        ]
      },
      "typeRoots": [
        "./node_modules/@types",
        "./src/types",
      ],
    },
    "include": [
      "src/types/**/*.d.ts",
      "src/**/*.ts",
    ],
    "exclude": ["node_modules"]
  }